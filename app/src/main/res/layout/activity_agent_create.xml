<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.agent.create.AgentCreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >

        <EditText
            android:id="@+id/et_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Nama Toko"
            />

        <EditText
            android:id="@+id/et_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Nama Pemilik Toko"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Alamat Lengkap Toko"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Atur Lokasi"
            android:focusable="false"
            android:layout_marginTop="10dp"
            />
        
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/img_add_image"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_corner"
            android:text="Simpan"
            android:layout_marginTop="20dp"
            />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>
</ScrollView>